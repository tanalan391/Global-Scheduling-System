<AnchorPane prefHeight="800.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditCustomer">
   <children>
      <GridPane layoutX="50.0" layoutY="75.0" prefHeight="600.0" prefWidth="550.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="278.0" minWidth="10.0" prefWidth="193.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="301.0" minWidth="10.0" prefWidth="282.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="300.0" text="Customer ID">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="300.0" text="Name" GridPane.rowIndex="1">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="300.0" text="Address" GridPane.rowIndex="2">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="300.0" text="Postal Code" GridPane.rowIndex="3">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label alignment="TOP_LEFT" prefHeight="17.0" prefWidth="300.0" text="Phone" GridPane.rowIndex="4">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="firstLevelLabel" alignment="TOP_LEFT" prefHeight="17.0" prefWidth="300.0" GridPane.rowIndex="5">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="countryLabel" alignment="TOP_LEFT" prefHeight="35.0" prefWidth="300.0" text="Country" GridPane.rowIndex="6">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="nameField" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="addressField" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="postalCodeField" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField fx:id="phoneField" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ComboBox fx:id="flCombo" prefHeight="25.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <ComboBox fx:id="countryCombo" onAction="#onCSelect" prefHeight="25.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <TextField fx:id="custIDField" editable="false" maxWidth="200.0" GridPane.columnIndex="1" />
         </children>
      </GridPane>
      <Button layoutX="125.0" layoutY="700.0" mnemonicParsing="false" onAction="#onSave" prefHeight="50.0" prefWidth="125.0" text="SAVE">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Button layoutX="367.0" layoutY="700.0" mnemonicParsing="false" onAction="#onCancel" prefHeight="50.0" prefWidth="125.0" text="CANCEL">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Label layoutX="216.0" layoutY="27.0" text="Edit a Customer">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </children>
